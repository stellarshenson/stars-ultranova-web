# Application
APP_NAME="Stars Nova Web"
VERSION="0.1.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=9800
RELOAD=true

# Proxy/Base Path (for JupyterHub proxy support)
# ROOT_PATH is auto-detected from X-Forwarded-Prefix header
# Only set manually if auto-detection doesn't work
ROOT_PATH=

# Gunicorn settings
WORKERS=1
FORWARDED_ALLOW_IPS=*

# CORS
CORS_ORIGINS=["http://localhost:9800", "http://127.0.0.1:9800"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Database
DATABASE_URL=sqlite:///data/stars_nova.db

# Game Settings
MAX_PLAYERS=16
UNIVERSE_SIZES=["tiny", "small", "medium", "large", "huge"]
DEFAULT_UNIVERSE_SIZE=medium

# Frontend
FRONTEND_DIR=frontend
STATIC_FILES=true
